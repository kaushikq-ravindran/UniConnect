<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:layout_margin="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:id="@+id/raw_place_item_image"
        android:layout_alignParentLeft="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Localtion"
        android:layout_toRightOf="@id/raw_place_item_image"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        android:id="@+id/raw_place_item_locality"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Localtion"
        android:layout_below="@id/raw_place_item_locality"
        android:layout_toRightOf="@id/raw_place_item_image"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:id="@+id/raw_place_item_description"/>



</RelativeLayout>